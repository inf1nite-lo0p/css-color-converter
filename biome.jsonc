{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "root": true,

    "linter": {
        "enabled": true,
        "domains": {
            "next": "all",
            "project": "recommended",
            "react": "all"
        },
        "rules": {
            "correctness": {
                "useUniqueElementIds": "off",
                "useImportExtensions": "off",
                "noUndeclaredDependencies": "off"
            },
            "style": {
                "useExportType": "error",
                "noNonNullAssertion": "off",
                "useComponentExportOnlyModules": "off"
            },
            "a11y": {
                "noSvgWithoutTitle": "off"
            }
        }
    },

    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": {
                    "level": "on",
                    "options": {
                        "groups": [
                            // Packages (node builtins + npm deps)
                            [":NODE:", ":PACKAGE:"],
                            ":BLANK_LINE:",

                            ["#*", "#/**"],
                            ":BLANK_LINE:",

                            // Parent imports (../*)
                            "../**",
                            ":BLANK_LINE:",

                            // Sibling value imports (./*) â€” keep types separate so they stay last
                            { "type": false, "source": ["./**"] },

                            // Sibling type-only imports last
                            { "type": true, "source": ["./**"] }
                        ],
                        "identifierOrder": "natural"
                    }
                }
            }
        }
    },

    "css": {
        "parser": {
            "tailwindDirectives": true
        }
    },

    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 130,
        "lineEnding": "lf",
        "useEditorconfig": false
    },

    /**
     * Language tweaks for JS/TS
     */
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "jsxQuoteStyle": "double",
            "lineWidth": 130,
            "indentWidth": 4
        }
    },

    /**
     * Make Biome skip React & stylesheet files so Prettier (with tailwind plugin) can handle them
     */
    "overrides": [
        {
            "includes": [
                "**/*.spec.ts",
                "**/*.spec.tsx",
                "**/*.spec.js",
                "**/*.test.ts",
                "**/*.test.tsx",
                "**/*.test.js",
                "**/__tests__/**",
                "**/tests/**"
            ],
            "linter": {
                "enabled": false
            }
        },
        {
            "includes": ["**/*.css"],
            "linter": {
                "rules": {
                    "complexity": {
                        "noImportantStyles": "off"
                    }
                }
            }
        }
    ],

    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    }
}
