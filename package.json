{
    "name": "css-color-converter",
    "displayName": "CSS Color Converter",
    "description": "Convert CSS color values in `prop: <color>;` declarations to a chosen format (oklch, oklab, lch, lab, rgb, hsl, hex).",
    "version": "0.0.1",
    "license": "MIT",
    "publisher": "inf1nite-lo0p",
    "repository": {
        "type": "git",
        "url": "https://github.com/inf1nite-lo0p/css-color-converter.git"
    },
    "engines": {
        "vscode": "^1.109.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "activationEvents": [
        "onCommand:colorConverter.convertSelectionOrDocument"
    ],
    "contributes": {
        "commands": [
            {
                "command": "colorConverter.convertSelectionOrDocument",
                "title": "Convert Colors (Selection or Document)"
            }
        ],
        "configuration": {
            "title": "CSS Color Converter",
            "properties": {
                "colorConverter.targetFormat": {
                    "type": "string",
                    "default": "oklch",
                    "enum": [
                        "oklch",
                        "oklab",
                        "lch",
                        "lab",
                        "rgb",
                        "hsl",
                        "hex"
                    ],
                    "description": "Target color format to convert to."
                },
                "colorConverter.useOpacity": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include alpha only if explicitly present in the source token or when alpha < 1."
                },
                "colorConverter.precision": {
                    "type": "number",
                    "default": 2,
                    "minimum": 0,
                    "maximum": 6,
                    "description": "Decimal places for numbers in generated output."
                },
                "colorConverter.promptForFormat": {
                    "type": "boolean",
                    "default": false,
                    "description": "If true, prompt for the target format each run (Quick Pick)."
                }
            }
        }
    },
    "scripts": {
        "build": "node build.mjs",
        "vscode:prepublish": "pnpm run build",
        "package": "pnpm run build && pnpm vsce package --no-dependencies",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "pnpm run compile && pnpm run lint",
        "lint": "eslint src",
        "test": "vscode-test",
        "test:unit": "pnpm run compile && node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.14",
        "@types/culori": "^4.0.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.109.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^3.7.1",
        "esbuild": "^0.27.3",
        "eslint": "^9.39.2",
        "mocha": "^11.7.5",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0"
    },
    "dependencies": {
        "culori": "^4.0.2"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    }
}
